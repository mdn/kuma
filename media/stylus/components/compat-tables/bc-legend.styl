/*
legend
====================================================================== */

.bc-legend {
    vendorize(column-count, 2);
    page-break-inside: avoid;
    webkit-column-break-inside: avoid;
    break-inside: avoid;
    margin-bottom: $grid-spacing;
}

.bc-legend dt {
    display: inline-block;
    margin: 0 0 5px 0;
}

.bc-legend dd {
    display: inline;
    margin: 0 10px 5px 10px;
}

.bc-legend dd:after {
  content: '\a';
  white-space: pre;
}
