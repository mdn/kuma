@require '../../includes/vars';
@require '../../includes/mixins';

/*
    Typography
    - headings, blockquotes, paragraphs, links, pre, code
*/

/*
Headings
====================================================================== */

h1, h2, h3, h4 {
    margin-bottom: ($content-block-margin / 2);

    font-family: $heading-font-family;
    font-weight: $light-font-weight;
    line-height: 1.5;
    {$selector-heading-font-fallback} {
        font-family: $heading-font-family-fallback;
        letter-spacing: -0.04em;
        line-height: 1.515;
        word-spacing: 0.01em;
    }
}

h2, h3 {
    font-family: $site-font-family;
    {$selector-site-font-fallback} {
        font-family: $site-font-family-fallback;
        line-height: 1.515;
    }
}

h2, h3, h4 {
    line-height: 100%;

    {$selector-site-font-fallback} {
        line-height: 1;
    }
}

h1 {
    heading-1();
    margin-bottom: $grid-spacing;
}

h2 {
    heading-2();

    font-weight: 700;
    {$selector-site-font-fallback} {
        font-weight: normal;
        letter-spacing: 0;
        word-spacing: -0.02em;
    }
}

h3 {
    set-font-size(24px);
    letter-spacing: -0.021em;
    {$selector-site-font-fallback} {
        line-height: 1.01;
        letter-spacing: 0.002em;
        word-spacing: 0.032em;
    }
}

h4 {
    set-font-size(18px);
    letter-spacing: -0.014em;
    {$selector-site-font-fallback} {
        letter-spacing: -0.044em;
        word-spacing: 0.22em;
    }
}

/*
====================================================================== */

p {
    margin-bottom: $content-block-margin;
}

/*
====================================================================== */

blockquote {
    prevent-last-child-bottom-spacing();
    padding: 20px 25px;
    border-left: 5px solid #ccc;
    margin-bottom: $content-block-margin;
    background: #eee;
    position: relative;

    &:before, &:after {
        color: #ccc;
        content: open-quote;
        font-size: 40px;
        position: absolute;
    }

    &:before {
        top: 0;
        left: 10px;
        content: '\201C';
    }

    &:after {
        bottom: 0;
        right: 10px;
        content: '\201D';
    }
}

/*
inline elements
====================================================================== */

a {
    color: $link-color;
    text-decoration: none;

    &:hover, &:focus, &:active {
        text-decoration: underline;
    }

    {$selector-icon}:before {
        cursor: pointer;
    }

    &[name] {
        color: inherit;
        text-decoration: none;
    }
}

abbr[title] {
    cursor: help;
}

sup {
    /* stops sup from messing with line height */
    position: relative;
    top: -0.15em;
    vertical-align: top;
}

/*
mono space elements (pre, code, kbd)
====================================================================== */

pre,
code {
    font-family: Consolas, Monaco, 'Andale Mono', monospace; /* match Prism */
}

/* pre is a block element so it gets a bit more fancy styling */
pre {
    set-font-size($base-font-size);
    line-height: 19px;
    border: 0;
    background: $light-background-color;
    color: $text-color;
    padding: $code-block-padding;
    overflow: auto;
    margin: 0 0 $grid-spacing 0;
}

/* code may appear inline in headings, we want to match the font weight of the element its nested in */
code {
    font-weight: inherit;
}

@media $media-query-mobile {
    h1, h2, h3, h4, h5, h6 {
        code {
            word-break: break-all;
        }
    }
}

kbd {
    background-color: $light-background-color;
    border-radius: 3px;
    border: 1px solid #b4b4b4;
    box-shadow: 0px 1px 1px rgba(0, 0, 0, 0.2), 0px 2px 0px 0px rgba(255, 255, 255, 0.7) inset;
    display: inline-block;
    font-family: inherit;
    font-size: 0.85em;
    line-height: 1.2;
    padding: 2px 4px;
    white-space:nowrap;
}

