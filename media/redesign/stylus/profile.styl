/*
  Used within the devmo django app
*/

@import 'vars'
@import 'mixins'

.profile {

  /* off-settings some old styles for now */
  #profile-head {
    background: light-background-color;
    border-color: header-background-color;
  }

  table.activity thead, table.activity tfoot {
    background: header-background-color;
  }

  table.activity tr:nth-child(2n), .gallery-foot {
    background: light-background-color;
  }

  table.activity th h3 {
    font-size: base-bump-font-size;
  }

  .submission .fm-submit button {
    box-shadow: inherit;
  }

  h1 {
      letter-spacing: -1px;
  }
}

/* just for the display page (not the edit page) */
.profile-display {

  #profile-head {
    min-height: 200px;

    .main {
      float: none;
      width: auto;
      margin-left: 150px;
    }

    .links {
      display: table;
      border-spacing: (grid-spacing / 2);
      margin: -(@border-spacing); // Offset outer border

      li {
        display: table-row;
      }

      i, a {
        display: table-cell;
        vertical-align: middle;
      }

      i {
        font-size: 14px;
        text-align: center;
      }

      a {
        compat-only(background, none);
        padding: 0;
      }
    }
  }
}

/* API key pages */
.profile-api-page {
  label {
    display: block; 
  }

  #section-head { /* this can all be removed after launch */
    compat-only(background, none);
    compat-only(border-bottom, none);
    compat-only(border-top, none);
    compat-only(color, inherit);
    compat-only(text-shadow, none);
    compat-only(box-shadow, none);
    compat-only(padding, 0);
    compat-only(margin-top, 0);

    h1 {
      heading-1();
      compat-only(width, auto);
      compat-only(float, none);
      compat-only(margin, 0);

      b {
        heading-1();
        compat-only(display, inline);
        compat-only(margin-top, 0);
        compat-only(color, inherit);
      }
    }
  }
}

#profile-edit {
    width: max-width-small-desktop; /* One fewer breakpoint to worry about. */
    padding-left: 265px; /* Temporarily copied from legacy CSS for later reference. */

    form-width = @width - @padding-left;
    newsletter-width = 400px;

    form {
        position: relative;
        width: form-width;
    }

    fieldset {
        width: (form-width - grid-spacing - newsletter-width); /* Leave room for the newsletter. This is overridden in the newsletter itself. */
    }

    fieldset#apps-newsletter-subscribe {
        position: absolute;
        right: 0;
        top: 0;
        width: newsletter-width;

        ol {
            margin-bottom: 0;
        }

        @media media-query-small-desktop {
            position: static;

            fieldset {
                margin: grid-spacing 0;
            }

            p {
                margin-bottom: (grid-spacing / 2);
            }
        }
    }

    #field_newsletter {
        margin-bottom: 0;
    }

    #field_beta, #field_newsletter {
        @extend .clear;

        input[type="checkbox"] {
            bidi-value(float, left, right);
        }

        label {
            position: absolute;
            bidi-style(margin-left, 25px, margin-right, 0);
        }
    }
}
