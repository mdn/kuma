@import 'vars'
@import 'mixins'

/* headings */
h1, h2, h3, h4
	font-weight light-font-weight
	margin-bottom (grid-spacing/2)

h1
	font-size 48px
	letter-spacing -2px
	margin-bottom grid-spacing
h2
	font-size 32px
	letter-spacing -1px
	line-height 100%

h3
	font-size 28px
	letter-spacing -0.5px
	line-height 100%

h4
	font-size 24px
	letter-spacing -0.25px
	line-height 100%
	
/* basic text */
{selector-icon}
	display inline-block
	margin-left (grid-spacing / 2)
	compat-only(margin-right, 0)

	&:before
		display inline-block
		text-decoration none

p
	margin-bottom grid-spacing

/* forms */
input[type='search']
	vendorize(appearance, textfield)

label
	cursor pointer


/* links */
a
	color link-color

	{selector-icon}:before
		cursor pointer

button, a.button, input[type='submit'], input[type='button']
	@extend .button

button, input[type='submit'], input[type='button']
	&::-moz-focus-inner
		margin-top -1px
		margin-bottom -1px