@import 'vars'
@import 'mixins'
@import 'grid'

body.search-results {
  create-gradient-background(header-background-color);
}

main {
  compat-important(background, transparent); /* temporarily important until we migrate all CSS */
}

/* update the header search size */
minimize-header-search();

/* search pane used by multiple blocks */
.search-pane {
  padding: grid-spacing;
  background: #fff;
  margin-bottom: (grid-spacing / 2);
}

/* block mentioning the number of results returned */
h3 {selector-icon} {
  bidi-style(margin-right, (grid-spacing * .75), margin-left, 0);
}

p {
  compat-only(padding-left, 0);
}

.search-results-explanation {
  position: relative;

  p {
    font-style: italic;
    margin-bottom: 0;
  }
}

/* search form */
.results-search-form {
  margin-bottom: (grid-spacing * 2);

  input {
    big-search();
    background: rgba(255, 255, 255, 0.5);
  }
}

.search-results-container {
  padding: grid-spacing;
  
  h3 {
    margin-bottom: grid-spacing;
  }
}

.result-list {
  reverse-link-decoration();

  .column-1 {
    text-align: center;
    color: link-color;
  }

  h4 {
    @extend .larger
  }

  h4, {selector-icon} { /* bug #938074 */
    line-height: 30px;
    margin-bottom: 0;
  }

  p {
    margin-bottom: 0;
    font-style: italic;
  }

  li {
    slider();
    padding: 10px 0 grid-spacing 0;

    &.closed {
      margin-bottom: 0;
    }
  }
}

.search-meta {
  margin-top: (grid-spacing / 4);

  a {
    color: #6a7b86;
    opacity: .5;
  }
}

.result-list-link {
  @extend .smaller;
  font-style: italic;

  {selector-icon} {
    margin-right: 6px !important;
    margin-left: 0;
  }

  a {
    color: text-color;
    display: inline-block;
    margin-right: (grid-spacing / 2);
  }

  prevent-last-child-spacing(a, margin-right);
}

.search-results-more {
  clearfix();
  padding: 0 grid-spacing;
}

/* sidebar topic listings */
.search-results-topics {
  reverse-link-decoration();

  h3 {
    margin-bottom: (grid-spacing / 2);

    i {
      margin-left: 0;
    }
  }

  li {
    padding-bottom: (grid-spacing / 2);
  }

  span, a {
    bidi-value(padding-right, (grid-spacing * 2), grid-spacing);
    bidi-value(padding-left, grid-spacing, (grid-spacing * 2));

    display: block;
    position: relative;

    {selector-icon} {
      position: absolute;
      top: 4px;
      bidi-style(left, -10px, right, auto);
    }
  }

  span.inactive {
    color: lightgrey;
  }

  a {
    color: #999;

    &.checked {
      color: link-color;
    }

    &:before {
      bidi-style(right, 0, left, auto);
      position: absolute;
      right: 0;
      top: 0;
      content: attr(data-count);
      color: text-color;
      opacity: 0.6;
    }
  }

  ul {
    margin-bottom: 30px;
  }
}

/* we're hiding the last column */
.search-results-no-demo {
  .result-list {
    .column-strip {
      display: none;
    }
    .result-list-item {
      @extend .column-11;
    }
  }
}

/* mobile media page */
@media media-query-mobile {
  .result-list .column-1 {
    display: none;
  }

  .search-results-topics {
    margin-top: grid-spacing;
  }
}
