@import 'vars'
@import 'mixins'
@import 'grid'

body.search-results
	create-gradient-background(header-background-color)

	p
		compat-only(padding-left, 0)

.search-pane
	background #fff
	margin-bottom (grid-spacing / 2)

h3 i[class^="icon-"]
	compat-important(margin-right, (grid-spacing * .75))

#search-results-close-container
	slider()

.search-results-explanation
	@extend .grid-padding
	position relative

	p
		font-style italic
		margin-bottom 0

	a.close
		font-size (3 * base-font-size)
		color text-color
		text-decoration none
		display block
		position absolute
		top 0
		right grid-spacing

.seach-results-container
	@extend .grid-padding
	padding-left 0
	padding-right 0

	h3
		margin-left grid-spacing
		margin-bottom grid-spacing

.result-list
	reverse-link-decoration()

	.column-1
		text-align right
		color link-color

	p
		margin-bottom 0
		font-style italic

	li
		slider()
		margin-bottom (grid-spacing + (grid-spacing / 2))

		&.closed
			margin-bottom 0


.search-meta
	margin-top (grid-spacing / 2)
	a
		color #6a7b86
		opacity .5

.result-list-link
	@extend .smaller
	font-style italic

	{selector-icon}
		margin-right 6px !important
		margin-left 0

	a
		color text-color
		display inline-block
		margin-right (grid-spacing / 2)
	
	prevent-last-child-spacing(a, margin-right)

.search-results-more
	reverse-link-decoration()
	text-align right
	padding-right grid-spacing

.search-results-topics
	reverse-link-decoration()

	h3
		margin-bottom (grid-spacing * 1.5)

	a
		display block
		margin-top grid-spacing
		padding-right (grid-spacing * 2)
		position relative

		&:before
			position absolute
			right 0
			top 0
			content attr(data-count)
			color text-color
			opacity 0.6

.search-results-no-demo
	.result-list
		.column-strip
			display none
		.result-list-item
			@extend .column-7