@import 'includes/vars'
@import 'includes/mixins'
@import 'includes/grid'

body.search-results {
  create-gradient-background(header-background-color);
}

main {
  compat-important(background, transparent); /* temporarily important until we migrate all CSS */
}

/* update the header search size */
minimize-header-search();

/* search pane used by multiple blocks */
.search-pane {
  padding: grid-spacing;
  background: #fff;
  margin-bottom: (grid-spacing / 2);
}

/* block mentioning the number of results returned */
h3 {selector-icon} {
  bidi-style(margin-right, (grid-spacing * .75), margin-left, 0);
}

/* block mentioning the number of results returned */
fieldset {selector-icon} {
  bidi-style(margin-right, (grid-spacing * .75), margin-left, 0);
}

p {
  compat-only(padding-left, 0);
}

.search-results-explanation {
  position: relative;

  p {
    font-style: italic;
    margin-bottom: 0;
  }
}

/* search form */
.results-search-form {
  margin-bottom: (grid-spacing * 2);

  input {
    big-search();
    background: rgba(255, 255, 255, 0.5);
  }
}

.search-results-container {
  padding: grid-spacing;

  h3 {
    margin-bottom: grid-spacing;
  }
}

.result-list {
  reverse-link-decoration();

  .column-1 {
    text-align: center;
    color: link-color;
  }

  h4 {
    @extend .larger
  }

  h4, {selector-icon} { /* bug #938074 */
    line-height: 30px;
    margin-bottom: 0;
  }

  p {
    margin-bottom: 0;
    font-style: italic;
  }

  li {
    slider();
    padding: 10px 0 grid-spacing 0;

    &.closed {
      margin-bottom: 0;
    }
  }
}

.search-meta {
  margin-top: (grid-spacing / 4);

  a {
    color: #6a7b86;
    opacity: .5;
  }
}

.result-list-link {
  @extend .smaller;
  font-style: italic;

  {selector-icon} {
    margin-right: 6px !important;
    margin-left: 0;
  }

  a {
    color: text-color;
    display: inline-block;
    margin-right: (grid-spacing / 2);
  }

  prevent-last-child-spacing(a, margin-right);
}

.search-results-more {
  clearfix();
  padding: 0 grid-spacing;
}

/* sidebar topic listings */
.search-results-topics {
  reverse-link-decoration();
  fieldset {
    fieldset {
      margin-bottom: 30px;
    }
    legend {
      font-size: 24px;
      letter-spacing: -0.5px;
      margin: -7px 0 (grid-spacing / 2);

      i {
        margin-left: 0;
      }
    }
  }

  label {
    display: block;
    padding-bottom: (grid-spacing / 2);

    .icon-check {
      margin-right: 5px;
    }

    .icon-check-empty {
      margin-right: 7px;
    }
    &:hover .filter-name,
    input[type="checkbox"]:focus+ .filter-name{
      color: link-color;
    }

    &.inactive {
      color: #999;
    }

    .filter-count{
      bidi-value(float, right, left)
    }

  }

}

input.filter-button {
  display: none;

  .no-js & {
    display: inline-block;
  }
}

/* we're hiding the last column */
.search-results-no-demo {
  .result-list {
    .column-strip {
      display: none;
    }
    .result-list-item {
      @extend $column-11;
    }
  }
}

/* mobile media page */
@media media-query-mobile {
  .result-list .column-1 {
    display: none;
  }

  .search-results-topics {
    margin-top: grid-spacing;
  }
}
