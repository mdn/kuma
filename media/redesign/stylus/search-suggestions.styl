@import 'includes/vars'
@import 'includes/mixins'
@import 'includes/grid'

.search-form {
  padding: (grid-spacing * 2) 0;

  .search-wrapper{
    big-search();
    color: #fff;
    cursor: text;
    min-height: 36px;
    padding: 6px;
    position: relative;
    .show-topics{
      background-color: rgba(255, 255, 255, 0) !important;
      box-shadow: none;
      color: #FFF!important;
      font-size: 1.2em !important;
      position: absolute;
      right: 0px;
    }
    input#search-q-s {
      background: transparent;
      border: none;
      color: #fff;
      display: inline;
      padding: 0 8px;
      vertical-align: middle;
      width: auto; 
    }
  }

  .notificaton-first-time {
    big-search();
    background-color: #223066;
    border-radius: 0px;
    box-shadow: inset 0px 0px 2px #333;
    color: #fff;
    margin: 0 auto;
    padding: 14px 6px;
    position: relative;
    vendorize(animation, openNotification 1s);

    h2 {
      font-size: 20px;
      text-transform: uppercase;
      padding: 0px 10px;
    }
    p {
      margin-bottom: 5px;
      padding: 0px 10px;
      i[class^="icon-"] {
        margin-left: 0px;
      }
    }
    .close {
      background-color: rgba(255, 255, 255, 0) !important;
      box-shadow: none;
      color: #FFF!important;
      position: absolute;
      right: 0px;
      top: 4px;
    }
  }

  .suggestions {
    big-search();
    border-radius: 0px;
    color: #fff;
    max-height: 300px;
    overflow-y:scroll;
    padding: 6px;
    strong {
      text-transform: uppercase;
      padding: 0 10px;
    }
    li {
      a.search-ss{
        display: block;
        color: #FFF;
        padding: 0 10px;
        &:hover,
        &:focus,
        &.selected {
          background: #202F67;
          color: #FFF!important;
          text-decoration: none;
        }
        span {
          float: right;
        }
      }
    }
  }

  .filters-left,
  .filters-right {
    display: inline-block;
    margin: 0 3px; 
    i[class^="icon-"] {
      margin: 0px !important;
      vertical-align: bottom; 
      &:before {
        cursor: pointer !important;
      }
    }
  }

  .filters {
    display: inline-block;
    height: 35px;
    max-width: 70%;
    overflow: hidden;
    position: relative;
    vertical-align: top;
    white-space: nowrap;
    span.topic {
      background-color: #202F67!important;
      box-shadow: none;
      color: #FFF!important;
      cursor: default!important;
      margin-right: 5px;
      padding: 3px 11px 3px 17px !important;
      text-transform: none!important;
      button.close {
        background-color: transparent !important;
        box-shadow: none;
        color: #FFF!important;
        margin-left: 5px;
        padding: 5px 0px 5px 5px !important
        i[class^="icon-"] {
          margin-left: 0;
        }
      }
    }
  }

  &.dark {
    .search-wrapper, .suggestions {
      background-color: #FFF;
    }
    .search-wrapper, .search-wrapper input#search-q-s, .search-wrapper .show-topics, .suggestions, .suggestions li a {
      color: #4D4E53!important;
    }
  }

}
@-webkit-keyframes openNotification {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}
@keyframes openNotification {
  from {
    margin-top: -115px;
    opacity: 0;
  }
  to {
    margin-top: 0px;
    opacity: 1;
  }
}
