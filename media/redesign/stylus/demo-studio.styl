@import 'vars'
@import 'mixins'
@import 'grid'

html
  background url('/media/img/bg-content.png') repeat fixed 0% 0% #f6f6f1

.section-demos
  background #c0c4c8
  min-width 0

  use-white-logo()

  main
    background transparent

  &:not(.devderby) 
    override-main-nav-color(#fff)

    #main-header

      .search-wrap
        background-color rgba(255, 255, 255, 0.2)

        &, input, .search-trigger
          color #fff !important


  /* dev derby landing - legacy offsets */
  &.devderby.landing

    main 
      /* background #eaeff2 */

      .center
        max-width 980px

    .main, .sub
      float left

    .main
      @extend .column-main

    .sub
      @extend .column-strip

    #challenge-prizes
      padding 0
      

  /* remove ugly button styles */
  .button, button
    compat-important(box-shadow, none)

#demostudio.landing, #demostudio.detail
  compat-important(background-position, center 0px)