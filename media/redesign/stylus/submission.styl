@import 'includes/vars';
@import 'includes/mixins';

.submission {
    .section {
        set-font-size($small-bump-font-size);
        margin: 0 0 $grid-spacing;
        padding: 35px 0 0;
        position: relative;

        & > legend {
            b {
                display: block;
                set-font-size($base-bump-font-size);
                position: absolute;
            }
        }

        &.notitle {
            padding-top: 0;
        }
    }

    li {
        margin: 0 0 ($grid-spacing / 2);
    }

    input[readonly] {
        background: transparent;
        border: 0;
    }

    label {
        input {
            padding: 0;
            width: auto;
        }
    }

    .note {
        color: #666;
        font-family: inherit;
        set-smaller-font-size();
        font-style: normal;
        font-weight: normal;
    }

    p.note {
        margin: ($grid-spacing / 4) 0;
    }

    .trouble {
        margin-top: $grid-spacing;
    }

    .inline {
        legend {
            b {
                display: block;
                margin: 0 0 7px;
            }
        }
        li {
            margin: 0 0 ($grid-spacing / 4);
        }
        label {
            display: inline;
            font-weight: normal;
        }
    }

    .disabled {
        color: #999;
        color: rgba(0,0,0,.4);
    }

    .other-value {
        margin-top: ($grid-spacing / 4);
        label {
            display: block;
        }
    }

    input[type='url'], input[type='email'], input[type='text'] {
        width: 350px;
        max-width: 100%;
    }

    label, .label {
        display: block;
        font-weight: normal;
        margin: 0 0 ($grid-spacing / 4);
    }

    .inner {
        display: inline;
    }

    .outer {
        set-font-size($base-bump-font-size);
    }

    .upper {
        margin-bottom: 0;
    }

    .choices {
        list-style-type: none;
    }

    .choices li {
        margin-bottom: 5px;
    }

    .choices li label {
        display: inline-block;
    }

    .check {
        label, .label {
            display: inline;
        }
    }
}
