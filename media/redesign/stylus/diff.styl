/*
  Used for revision diff'ing tables, in the wiki and the dashboards
*/

.revision-diff {
  dt {
    clear: both;
    font-style: normal;
    font-weight: bold;
    border-top: 1px dotted #ccc;
  }
  .rev-from {
    width: 49%;
    float: left;
  }
  .rev-to {
    width: 49%;
    float: right;
  }
  h3 {
      font-weight: bold;
      margin: 5px 0 0;
  }
}

table.diff {
    background: #fff;
    border: 1px solid #ccc;
    clear: both;
    margin: 5px 0 15px;
    width: 100%;
    font-family: "Courier New", "Andale Mono", monospace;
}

td.diff_header {
    text-align:right;
}

.diff_next {
    background-color:#c0c0c0;
}

.diff_add {
    background-color:#aaffaa;
}

.diff_chg {
    background-color:#ffff77;
}

.diff_sub {
    background-color:#ffaaaa;
}