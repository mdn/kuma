/* flame ads */

$flame-mobile-max = 420px;
$flame-tablet-max = 650px;
$flame-desktop-max = 1200px;
$flame-mobile-mq = 'all and (max-width : ' + $flame-mobile-max + ')';
$flame-tablet-mq = 'all and (min-width : ' + ($flame-mobile-max + 1px) +') and (max-width : ' + $flame-tablet-max + ')';
$flame-large-desktop-mq = 'all and (min-width : ' + ($flame-desktop-max + 1px) + ')';

.flame {
    background: #0156a2;
    background: linear-gradient(90deg,rgba(255,255,255,0) 9px,rgba(255,255,255,0.1) 9px),linear-gradient(rgba(255,255,255,0) 9px,rgba(255,255,255,0.1) 9px),linear-gradient(#008ed7,#0156a2);
    background-size: 10px 10px,10px 10px,cover;
    color: #fff;
    display: table;
    font-size: 18px;
    font-family: 'Open Sans Light';
    line-height: 1.1;
    position: relative;
    width: 100%;

    &:hover,
    &:focus {
        text-decoration: none;
    }

    @media $flame-mobile-mq {
        display: block;
        overflow: hidden;
    }
}

.flame-logo {
    background: url('/media/redesign/img/fxos_logo.png') no-repeat 20px center;
    color: #016DB8;
    color: rgba(0,0,0,0);
    display: table-cell;
    font-size: 0;
    padding: 20px 0 17px 20px;
    vertical-align: middle;
    width: 165px;

    @media $flame-tablet-mq, $flame-mobile-mq {
        background-size: 100px
        display: block;
        height: 30px;
        width: 100px;
    }
}

.flame-body {
    display: table-cell;
    padding: 20px;
    vertical-align: middle;

    @media $flame-mobile-mq {
        padding: 0 120px 20px 20px;
    }

    @media $flame-tablet-mq {
        display: block;
        padding-top: 0;
        padding-right: 50px;
    }

    & > br {
        @media $flame-large-desktop-mq {
            display: none;
        }
    }

    .flame:hover &,
    .flame:focus & {
        text-decoration: underline
    }
}

.flame-cta {
    display: table-cell;
    font-size: 14px;
    padding: 20px 20px 17px 150px;
    text-transform: uppercase;
    text-align: center;
    vertical-align: middle;
    width: 30%;

    @media $flame-mobile-mq {
        display: block;
        padding: 0 0 20px 20px;
        text-align: left;
        font-size: 12px
    }

    &:before,
    &:after {
        content: '';
        display: block;
        position: absolute;
        top: 0;
        right: 0;
        bottom: 0;
    }

    /* grey background */
    &:before {
        background-color: #4d4e53;
        padding-left: 10px;
        width: 30%;

        @media $flame-mobile-mq {
            display: none
         }
    }

    /* flame picture */
    &:after {
        background: url("/media/redesign/img/flame.png") 0 -5px no-repeat;
        margin-right: -115px;
        top: -1px;
        right: 30%;
        width: 200px;

        @media $flame-mobile-mq {
            right: auto;
            top: 30px;
            right: 0;
            width: 140px;
            margin: 0;
        }
    }
}

.flame-cta-body {
    position: relative;
    color: #c7c9d1;

    .flame:hover &,
    .flame:focus & {
        color: #fff;
    }

    @media $flame-mobile-mq {
        color: #fff
    }

    & > i {
        position: absolute;
        top: 50%;
        left: 100%;
        padding-left: 5px;
    }
}

@media $flame-tablet-mq {
    .flame-cta {
        width: 50%
    }

    .flame-cta:after {
        right: 50%
    }

    .flame-cta:before {
        width: 50%
    }
}

@media $flame-large-desktop-mq {
    .wiki-right-closed,
    .wiki-left-closed {

        .flame-cta {
            padding-left: 120px
        }

        .flame-cta-body > br {
            display: none
        }

        .flame-cta-body > i {
            position: static
        }
    }
}

