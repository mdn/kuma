    font-weight: 700;
}
.method > .params > .param > .type:before {
    content: "Type ";
    color: #888;
    font-weight: normal;
}
.method > .params > .param > .default {
    display: inline-block;
    width: 150px;
    vertical-align: top;
    font-weight: 700;
}
.method > .params > .param > .default:before {
    content: "Default ";
    color: #888;
    font-weight: normal;
}
