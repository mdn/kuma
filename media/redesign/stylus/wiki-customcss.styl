.method {
    margin-left: 10px;
    margin-bottom: 2em;
    margin-top: 1em;
}
.method > .name {
    display: block;
    font-size: 13pt;
    margin-bottom: 0.2em;
}
.method > .name > .param:after {
    content: ",";
    padding-right: 0.5em;
}
.method > .name > .param:last-of-type:after {
    content: "";
}
.method > .name > .param > .name:after {
    content: " as ";
    font-weight: normal;
}
.method > .name > .param:not(.required) {
    font-style: italic;
}
.method > .name > .param:not(.required):before {
    content: "[";
}
.method > .name > .param:not(.required):after {
    content: "]";
}
.method > .description {
    display: block;
    font-size: 10pt;
    color: #444;
    font-style: italic;
    margin-bottom: 7px;
