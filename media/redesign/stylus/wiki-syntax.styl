@import 'includes/vars';

code[class*='language-'], pre[class*='language-'] {
    color: inherit;
    text-shadow: none;
}

pre[class*='language-'] {
    margin: 0 0 24px 0;

    span.comment {
        display: inherit;
    }
}

.error pre[class*='language-'] {
    margin: 10px 0 0 0;
    background: none;
}

:not(pre)>code[class*='language-'], pre[class*='language-'] {
    background: rgba(234, 239, 242, 0.25);
    border-left: 6px solid rgba(0, 83, 159, 0.65);
    background-image:  url(media-url-dir + 'blueprint-dark.png');
    background-position: top center;
    background-repeat: repeat;
}

/*
    Some places in the wiki feature <pre><em><code>
*/
pre em code[class*='language-'] {
    background-image: none;
    border-left: 0;
    background: transparent;
}

pre[class*='language-'].twopartsyntaxbox, pre[class*='language-'].syntaxbox {
    background: rgba(212, 221, 228, 0.5);
    margin-bottom: 0;
}
