@import 'vars'
@import 'mixins'
@import 'grid'

#home {
  create-home-gradient-background(#00539f);
  remove-main-spacing();
  use-white-logo();

  /* general structure adjustments */
  #main-header {
    background: none;
    border-bottom-color: rgba(255, 255, 255, 0.2);
  }

  /* update main nav menu color */
  override-main-nav-color(#fff);

  /* update the homepage search size */
  minimize-header-search();

  .home-callouts {
    background: #4d4e53;
  }

  .search-wrap {
    input {
      set-placeholder-style(color, #fff);
    }
  }

  main {
    background: transparent;
  }

  /* shared spacing in prominent block*/
  .home-masthead, .home-hacks, .home-demos, .home-contribute {
    padding: first-content-top-padding 0;
  }

  /* shared basic tag updates throughout the homepage */
  h2, h3 {
    > i {
      display: inline-block;
      position: relative;
      margin-left: 0;
      background-image: url(media-url-dir + 'mdn_blank-grey-document-color.svg');
    }
  }

  h2 {
    > i {
      width: 72px;
      height: 62px;
      color: #0095dd;

      &.blue {
        background-image: url(media-url-dir + 'mdn_blank-blue-document-color.svg');
        color: #fff;
      }

      &[class^='icon-']:before {
        margin: 16px 0 0 0;
        display: block;
        text-align: center;
      }
    }
  }

  h3 {
    clear();
    text-transform: uppercase;

    i {
      background-size: cover;
      width: 47px;
      height: 41px;
      color: #0095dd;
      margin-left: 0 !important;
      float: left;

      &:before {
        margin: 9px 0 0 0;
        display: block;
        text-align: center;
      }
    }

    &.zones span {
      padding-top: 10px;
    }

    span {
      float: left;
    }
  }

  .entry-meta {
    @extend .smaller;
    font-style: italic;
  }
}

/* homepage masthead (search, feature callouts) */
.home-masthead {

  h1 {
    color: #fff;
    margin: 0 auto;
    width: 60%;

    span {
      bidi-style(padding-left, 20%, padding-right, 0);
      display: block;
    }
  }

  .home-search-form {
    padding: (grid-spacing * 2) 0;

    input {
      big-search();
      color: #fff;

      set-placeholder-style(color, #fff);
    }
  }
}

/* List of four feature columns within the masthead */
.home-features {
  &, a {
    color: #fff !important;
  }

  a {
    text-decoration: underline;
    outline-color: #fff;
  }

  h3 {
    @extend .larger;
    font-weight: bold;
    font-family: 'Open Sans Extra Bold', sans-serif;

    {selector-icon} {
      bidi-style(margin-right, icon-margin, margin-left, 0);
    }
  }

  li {
    padding: 4px 0;
  }

  .column-home-features {
    @extend .column-strip;
  }
}

/* three colorful callouts */
.column-callout  {
  @extend .column-4;
  position: relative;

  i {
    bidi-style(right, 5%, left, auto);
    position: absolute;
    top: 0;
    display: block;
  }

  span {
    padding-right: 20px;
  }

  a {
    color: #fff !important;
    display: block;
    padding: 100px grid-spacing grid-spacing grid-spacing;
    position: relative;
    overflow-x: hidden;
    font-size: larger-font-size;

    &:before {
      bidi-style(content, '\f061', content, '\f060');
      bidi-style(right, grid-spacing, left, auto);
      font-family: 'FontAwesome';
      bottom: grid-spacing;
      position: absolute;
      font-size: 24px;
      z-index: 4;
    }
  }

  &.callout-apps {
    background: url(media-url-dir + 'HTML5_Logo.svg') 95% -70px no-repeat #e66000;
  }

  &.callout-android {
    background: url(media-url-dir + 'promo-phone.png') 95% 0 no-repeat #97c03d;
  }

  &.callout-firefoxos {
    background: url(media-url-dir + 'promo-fox.png') 95% 0 no-repeat #0095dd;
  }
}

/* homepage hacks block of blog post summaries */
.home-hacks {
  background: #fff;

  .column-hacks {
    @extend .column-main;
  }

  .column-involved {
    @extend .column-strip;
  }

  li {
    padding-top: grid-spacing;
    border-bottom: 1px solid #ececec;

    &:last-child {
      border-bottom: 0;
    }
  }

  h2.entry-title {
    letter-spacing: 0;
    line-height: normal;
    margin-bottom: 0;
    font-size: base-font-size;

    a {
      text-decoration: underline;
      compat-only(margin-left, 0);
      compat-only(font-style, normal);
    }
  }

  .hacks {
    margin-bottom: (grid-spacing / 2);
  }

  .home-involved-card {
    background: url(media-url-dir + 'home-globe.png') -90px 40px no-repeat #f4f7f8;

    a {
      color: #fff;
      text-decoration: none;
      padding: grid-spacing;
      display: block;
    }

    .numbers {
      padding-bottom: 40px;
      line-height: 40px;

      .row1, .row2, .row3 {
        display: block;
      }
    }

    .number {
      font-size: 30px;
      font-weight: bold;
    }

    h2 {
      @extend .larger;
      padding-bottom: (grid-spacing / 2);
      border-bottom: 1px solid #e0e2e4;
      margin-bottom: 110px;
      bidi-style(margin-right, -(grid-spacing), margin-left, 0);
      font-weight: bold;
    }

    p {
      margin: 0;
      padding: 0;
      text-align: center;
    }

    .button {
      background-color: #48ade4 !important;
      font-size: smaller-font-size !important;
      color: #fff !important;
    }
  }
}

/* demos section */
.home-demos {
  background: light-background-color;

  ul {
    clear();
    overflow-x: auto;
    position: relative;
  }

  li {
    @extend .smaller;
    display: block;
    text-align: center;
    margin-right: grid-spacing;
    float: left;
    font-style: italic;
    overflow: hidden;
    width: 194px;

    img {
      border: 6px solid #fff;
      display: block;
      vendorize(box-shadow, 2px 2px 1px rgba(0 , 0, 0, .1));
      margin-bottom: 6px;
    }
  }

  .preview {
    text-transform: uppercase;
    float: right;
    margin-top: -10px;

    span {
      display: block;
    }
  }
}


/* contribute section */
.home-contribute {
  background: #fff;

  a {
    text-decoration: underline;
  }

  h3 {
    @extend .larger;
    font-weight: bold;
    text-transform: uppercase;
  }

  li {
    border-bottom: 1px solid #ececec;
    padding: list-item-spacing 0;

    &:last-child {
      border-bottom: 0;
    }
  }

  .home-contribute-recent {
    margin-top: (grid-spacing / 2);
  }
}

/* tablet */
@media media-query-tablet {
  #home {
    .home-masthead {
      h1, input {
        width: 90%;
      }
    }
  }

  .column-callout {
    a {
      font-size: base-bump-font-size;
    }
  }
}

/* mobile */
@media media-query-mobile {
  #home {

    .home-masthead {
      h1, input {
        width: 90%;

        span {
          padding-left: 0;
        }
      }
    }

    .column-callout, .column-home-features {
      width: auto !important;
      float: none;
      margin-bottom: grid-spacing;
      margin-right: 0;
    }

    h2 {
      font-size: 20px;
    }

    .column-callout {
      a {
        font-size: larger-font-size;
      }
    }

    .home-callouts {
      padding-top: 20px;
    }

    .column-home-features {
      li {
        display: inline-block;
        padding-right: grid-spacing;
      }
    }

    .home-hacks {
      .column-hacks, .column-involved {
        float: none;
        width: auto;
      }

      .column-involved {
        margin-top: (grid-spacing * 2);
      }

      .home-involved-card p {
        text-align: left;
      }
    }
  }
}

/* right to left */
#home.html-rtl {

  h2 {
    > selector-icon:before {
      margin-right: 22px;
    }

    a { /* this can be bidi-'d when we can accommodate for body */
      margin-right: (grid-spacing * 2);
      margin-left: 0;
    }

  }

  h3 {
    i, span {
      float: right;
    }

    {selector-icon} {
      compat-only(margin-right, 0);
      compat-only(margin-left, icon-margin);
    }
  }

  i.icon-arrow-right:before {
    content: '\f060';
  }
}