@require '../../includes/vars';
@require '../../includes/mixins';

/*
    Typography
    - headings, blockquotes, paragraphs, links, pre, code
*/

/*
    headings
*/

h1, h2, h3, h4 {
    font-weight: $light-font-weight;
    margin-bottom: ($content-block-margin / 2);
    font-family: $heading-font-family;
}

h2, h3 {
    font-family: 'Open Sans', sans-serif;
}

h2, h3, h4 {
    line-height: 100%;
}

h3, h4 {
    font-weight: 200;
}

h1 {
    heading-1();
    margin-bottom: $grid-spacing;
}

h2 {
    heading-2();
    font-weight: 700;
}

h3 {
    set-font-size(24px);
    letter-spacing: -0.5px;
}

h4 {
    set-font-size(18px);
    letter-spacing: -0.25px;
}

/*
    paragraph
*/

p {
    margin-bottom: $content-block-margin;
}

/*
    links
*/

a {
    color: $link-color;
    text-decoration: none;

    &:hover, &:focus, &:active {
        text-decoration: underline;
    }

    {$selector-icon}:before {
        cursor: pointer;
    }

    &[name] {
        color: inherit;
        text-decoration: none;
    }
}


/*
    Blockquote
*/

blockquote {
    prevent-last-child-bottom-spacing();
    padding: 20px 25px;
    border-left: 5px solid #ccc;
    margin-bottom: $content-block-margin;
    background: #eee;
    position: relative;

    &:before, &:after {
        color: #ccc;
        content: open-quote;
        font-size: 40px;
        position: absolute;
    }

    &:before {
        top: 0;
        left: 10px;
        content: '\201C';
    }

    &:after {
        bottom: 0;
        right: 10px;
        content: '\201D';
    }
}

/*
    pre & code
*/

pre,
code {
    font-family: 'Courier New', 'Andale Mono', monospace;
    margin-bottom: $content-block-margin;
}

pre {
    set-font-size($base-font-size);
    line-height: 19px;
    border: 0;
    background: #f6f6f2;
    padding: 15px;
    overflow: auto;
}

code {
    font-weight: inherit;
}


@media $media-query-mobile {
    h1, h2, h3, h4, h5, h6 {
        code {
            word-break: break-all;
        }
    }
}

