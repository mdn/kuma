/*
    Used to style the dashboard widgets in the dashboard apps
*/

@require 'includes/vars';
@require 'includes/mixins';

$dashboard-col-base {
        padding: 6px;
        display: inline-block;
        vertical-align: text-top;
}

/* New revision dashboard styles */
.dashboard-table {
    width: 100%;

    thead tr {
        background: #3a3a3a;
        color: #fff;
        font-weight: bold;
    }

    .dashboard-col {
        @extend $dashboard-col-base;
        @extend $column-strip;
    }

    .dashboard-with-ip-col {
        @extend $dashboard-col-base;
        width: 18%; // FIXME: with some kind of grid calc?
    }

    tbody tr {
        border-bottom: 1px solid #ccc;
        cursor: pointer;

        &:hover {
            background: $light-background-color;
        }

        &:nth-child(even) {
            background: #f7f7f7;

            &:hover {
                background: $light-background-color;
            }
        }

        .new, .locale, .deleted {
            set-font-size(11px);
            border-radius: 8px;
            color: #fff;
            display: inline-block;
            margin-right: 6px;
            padding: 2px 4px;
        }
        .new {
            background: rgba-fallback(rgba(green, 0.6));
        }
        .locale {
            background: rgba-fallback(rgba(#777, 0.6));
        }
        .deleted {
            background: rgba-fallback(rgba(#f00, 0.6));
        }
    }

    .dashboard-detail {
        display: none;
        padding: 0 $grid-spacing;
    }


    .dashboard-slug {
        set-smaller-font-size();
        opacity: 0.8;
        font-style: italic;
        display: block;
    }

    #page-buttons {
        li {
            display: inline-block;
            margin-right: $list-item-spacing;
        }
    }
}


#revision-filter {
    #id_start_date, #id_end_date {
        width: 100px;
    }
    label {
        display: inline-block;
        margin-right: $list-item-spacing;
    }
    .revision-field {
        display: inline-block;
        margin: 0 $grid-spacing ($grid-spacing / 2) 0;
        white-space: nowrap;
    }
}
