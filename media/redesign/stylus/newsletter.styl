@import 'includes/mixins';
@import 'includes/vars';

#apps-newsletter-subscribe {
    #newsletter-toggle {
        @extend $checkbox-label-container;
    }

    .newsletter-setting {
        display: none; /* Prevents flash of content */
        padding-left: $grid-spacing;

        .no-js & {
            display: block;
        }
    }

    li {
        label {
            font-weight: normal;
        }
    }
}
