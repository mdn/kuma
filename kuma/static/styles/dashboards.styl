/*
    Used to style the dashboard widgets in the dashboard apps
*/

@require 'includes/vars';
@require 'includes/mixins';
@require 'components/banned';

/* New revision dashboard styles */
.dashboard-table {
    width: 100%;
    border-collapse: collapse;

    thead tr {
        background: #3a3a3a;
        color: #fff;
        font-weight: bold;
    }

    tbody tr {
        cursor: pointer;
        border-top: 1px solid rgba-fallback(rgba($text-color, 0.4));

        &:hover {
            background: $light-background-color;

            & + .dashboard-detail {
                background: $light-background-color;
            }
        }

        .new, .locale, .deleted {
            set-font-size(11px);
            border-radius: 8px;
            color: #fff;
            display: inline-block;
            margin-right: 6px;
            padding: 2px 4px;
        }
        .new {
            background: rgba-fallback(rgba(green, 0.6));
        }
        .locale {
            background: rgba-fallback(rgba(#777, 0.6));
        }
        .deleted {
            background: rgba-fallback(rgba(#f00, 0.6));
        }
    }

    /* Select only the outer table cells. */
    > thead th,
    .dashboard-row > td {
        @extend $column-2;
        padding: 6px;
        vertical-align: text-top;
    }

    .dashboard-title,
    .dashboard-comment,
    .dashboard-author {
        @extend $column-3;
    }

    .dashboard-spam {
        @extend $column-1;
        word-break: break-all;
    }

    .dashboard-title {
        word-break: break-all;
    }

    .dashboard-slug {
        set-smaller-font-size();
        opacity: 0.8;
        font-style: italic;
        display: block;
    }

    .dashboard-detail {
        border-top: 0;
    }

    .dashboard-detail-details {
        display: none;
        padding: 0 6px;
    }

    .submission-spam {
        font-weight: bold;
        color: $negative;
    }

    .submission-ham {
        font-weight: bold;
        color: $positive;
    }

    #page-buttons {
        li {
            display: inline-block;
            bidi-style(margin-right, $content-horizontal-spacing, margin-left, 0);
            margin-top: $content-vertical-spacing;
        }
    }
}


#revision-filter {
    #id_start_date, #id_end_date {
        width: 100px;
    }
    label {
        display: inline-block;
        margin-right: $content-horizontal-spacing;
    }
    .revision-field {
        display: inline-block;
        margin: 0 $grid-spacing ($grid-spacing / 2) 0;
        white-space: nowrap;
    }
}
